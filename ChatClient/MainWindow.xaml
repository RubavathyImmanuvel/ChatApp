<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Name="ChatTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Margin="10"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <TextBox Name="MessageTextBox" Width="400" Margin="0,0,10,0" />
            <Button Name="SendButton" Content="Send" Width="75" Click="SendButton_Click" />
        </StackPanel>
    </Grid>
</Window>